<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.butajlo.smartprofile.profile.ProfileViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_profile_name_layout"
            style="@style/ProfileItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/et_profile_name"
                android:text="@={viewModel.profileName}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_vibrations"
            style="@style/ProfileItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sw_profile_vibrations"
            android:checked="@={viewModel.vibrationsEnabled}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ProfileItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="@string/profile_ringtone_volume" />

            <SeekBar
                android:id="@+id/sb_ringtone_volume"
                style="@style/ProfileItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:progress="@{viewModel.ringtoneVolume}"
                android:onProgressChanged="@{viewModel::onRingtoneVolumeChanged}"/>

            <TextView
                style="@style/ProfileItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:text="@{String.valueOf(viewModel.ringtoneVolume)}"/>
        </LinearLayout>
    </LinearLayout>
</layout>